{
	"files": {
		"ignore": ["dist/**/*", "node_modules/**/*", "public/**/*", "**/*.css"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noCommaOperator": "off"
			}
		},
		"ignore": ["**/*.md", "**/*.css"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
